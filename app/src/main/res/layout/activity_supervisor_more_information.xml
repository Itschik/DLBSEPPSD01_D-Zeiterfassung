<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:textAlignment="textStart">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textEdit_moreInformation_supervisor"
        android:layout_width="380dp"
        android:layout_height="680dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/MoreInformation_supvervisor_Input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Weitere Informationen zum Auftrag eingeben"
            android:inputType="textMultiLine"
            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:gravity="top|start"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/backToAddNewJobPage_supervisor_Button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:text="zurÃ¼ck"
        android:textAlignment="gravity"
        android:textStyle="bold"
        app:icon="@drawable/arrow_back_24dp"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/saveMoreInformation_supervisor_Button"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:text="OK"
        android:textAlignment="center"
        android:textStyle="bold"
        app:icon="@drawable/data_check_24dp"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/backToAddNewJobPage_supervisor_Button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Vorgesetztenansicht: Weitere Informationen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
